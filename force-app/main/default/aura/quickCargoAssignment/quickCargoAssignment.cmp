<aura:component controller="CargoAssignmentController" implements="flexipage:availableForAllPageTypes,force:appHostable" access="global">
    <aura:attribute name="shipments" type="List" description="List of available shipments"/>
    <aura:attribute name="cargoItems" type="List" description="List of unassigned cargo"/>
    <aura:attribute name="selectedShipment" type="String" description="Selected shipment ID"/>
    <aura:attribute name="selectedCargo" type="String" description="Selected cargo ID"/>
    <aura:attribute name="isLoading" type="Boolean" default="true"/>
    <aura:attribute name="message" type="String"/>
    <aura:attribute name="messageType" type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-custom-custom48">
                        <lightning:icon iconName="custom:custom48" size="medium" alternativeText="Cargo"/>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <span class="slds-text-heading_medium">Quick Cargo Assignment</span>
                    </h2>
                </div>
            </header>
        </div>
        
        <div class="slds-card__body slds-card__body_inner">
            <aura:if isTrue="{!v.isLoading}">
                <lightning:spinner alternativeText="Loading" size="medium"/>
            </aura:if>
            
            <aura:if isTrue="{!not(v.isLoading)}">
                <aura:if isTrue="{!not(empty(v.message))}">
                    <div class="{!'slds-notify slds-notify_toast slds-theme_' + v.messageType + ' slds-m-bottom_medium'}" role="status">
                        <span class="slds-assistive-text">{!v.messageType}</span>
                        <div class="slds-notify__content">
                            <h2 class="slds-text-heading_small">{!v.message}</h2>
                        </div>
                    </div>
                </aura:if>
                
                <div class="slds-grid slds-gutters slds-wrap">
                    <!-- Shipment Selection -->
                    <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2">
                        <div class="assignment-section">
                            <div class="section-header">
                                <lightning:icon iconName="custom:custom18" size="small"/>
                                <h3 class="slds-text-heading_small">Select Shipment</h3>
                            </div>
                            
                            <lightning:select name="shipmentSelect" 
                                            label="Available Shipments" 
                                            value="{!v.selectedShipment}"
                                            onchange="{!c.handleShipmentChange}"
                                            class="slds-m-top_small">
                                <option value="">-- Choose a Shipment --</option>
                                <aura:iteration items="{!v.shipments}" var="shipment">
                                    <option value="{!shipment.Id}">{!shipment.Name} - ETA: {!shipment.ETA__c}</option>
                                </aura:iteration>
                            </lightning:select>
                            
                            <aura:if isTrue="{!not(empty(v.selectedShipment))}">
                                <div class="slds-box slds-theme_shade slds-m-top_small shipment-details">
                                    <dl class="slds-dl_horizontal">
                                        <dt class="slds-dl_horizontal__label">
                                            <p class="slds-truncate">Status:</p>
                                        </dt>
                                        <dd class="slds-dl_horizontal__detail">
                                            <span class="slds-badge slds-theme_success">Active</span>
                                        </dd>
                                        <dt class="slds-dl_horizontal__label">
                                            <p class="slds-truncate">Capacity:</p>
                                        </dt>
                                        <dd class="slds-dl_horizontal__detail">Available</dd>
                                    </dl>
                                </div>
                            </aura:if>
                        </div>
                    </div>
                    
                    <!-- Cargo Selection -->
                    <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-2">
                        <div class="assignment-section">
                            <div class="section-header">
                                <lightning:icon iconName="custom:custom48" size="small"/>
                                <h3 class="slds-text-heading_small">Select Cargo</h3>
                            </div>
                            
                            <lightning:select name="cargoSelect" 
                                            label="Unassigned Cargo" 
                                            value="{!v.selectedCargo}"
                                            onchange="{!c.handleCargoChange}"
                                            class="slds-m-top_small">
                                <option value="">-- Choose Cargo --</option>
                                <aura:iteration items="{!v.cargoItems}" var="cargo">
                                    <option value="{!cargo.Id}">{!cargo.Name} - {!cargo.Weight__c} kg</option>
                                </aura:iteration>
                            </lightning:select>
                            
                            <aura:if isTrue="{!not(empty(v.selectedCargo))}">
                                <div class="slds-box slds-theme_shade slds-m-top_small cargo-details">
                                    <dl class="slds-dl_horizontal">
                                        <dt class="slds-dl_horizontal__label">
                                            <p class="slds-truncate">Type:</p>
                                        </dt>
                                        <dd class="slds-dl_horizontal__detail">Standard</dd>
                                        <dt class="slds-dl_horizontal__label">
                                            <p class="slds-truncate">Priority:</p>
                                        </dt>
                                        <dd class="slds-dl_horizontal__detail">
                                            <span class="slds-badge slds-theme_warning">Medium</span>
                                        </dd>
                                    </dl>
                                </div>
                            </aura:if>
                        </div>
                    </div>
                </div>
                
                <!-- Assignment Action -->
                <div class="slds-m-top_medium slds-text-align_center">
                    <lightning:button variant="brand" 
                                    label="Assign Cargo to Shipment" 
                                    onclick="{!c.handleAssignment}"
                                    disabled="{!or(empty(v.selectedShipment), empty(v.selectedCargo))}"
                                    class="assign-button"/>
                </div>
            </aura:if>
        </div>
    </div>
</aura:component>